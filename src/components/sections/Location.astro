      </div>
      <div class="flex items-start space-x-3">
        <Phone className="w-5 h-5 mt-0.5 text-primary !text-[#db6f82]" />
        <div>
          <h3 class="font-semibold !text-[#db6f82]">Telefone</h3>
          <p>+55 (11) 2639-6778</p>
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-2 place-items-center">
      <MiniMap className="size-80 rounded-lg justify-self-center" />
      <div class="flex items-center space-x-2">
        <Info className="size-4 text-primary !text-[#db6f82]" />
        <p class="text-sm text-muted-foreground">Estacionamento no local</p>
      </div>
    </div>
  </div>

