---
import fetchBucketFiles from "@/services/buckets/fetch_bucket_files";
import { Marquee } from "../ui/marquee";
const images = await fetchBucketFiles("frontend", "principal");
---

<Fragment slot="head">
  {images.map((url) => <link rel="preload" href={url} as="image" />)}
</Fragment>

<section
  class="relative flex h-[500px] w-full flex-col items-center justify-center overflow-hidden rounded-lg bg-background mb-20"
>
  <Marquee client:only="react" pauseOnHover className="[--duration:60s]">
    {
      images.map((data) => (
        <img
          src={data}
          alt={""}
          class="mx-auto h-full w-3/4 cursor-pointer rounded-xl border border-neutral-300 transition-all duration-300 hover:ring-1 hover:ring-neutral-300"
        />
      ))
    }
  </Marquee>
  <div
    class="pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r from-white dark:from-background"
  >
  </div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 w-1/3 bg-gradient-to-l from-white dark:from-background"
  >
  </div>
</section>
