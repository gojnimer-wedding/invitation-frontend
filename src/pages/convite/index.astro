---
import Carousel from '@/components/Carousel.tsx';
import BaseLayout from '@/layouts/BaseLayout.astro';
import fetchBucketFiles from '@/services/supabase/fetch_bucket_files';

const images = await fetchBucketFiles("wedding_photo_essay", "carousel_invite")

---
<Fragment slot="head">
	{images.map(url => <link rel="preload" href={url} as="image" />)}
</Fragment>

<BaseLayout title="Convite">
	<section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
		<div class="flex max-w-[980px] flex-col items-start gap-2">
		  <h1
			class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl"
		  >
			Astro Shadcn UI Template <br class="hidden sm:inline" />
			built with Radix UI and Tailwind CSS.
		  </h1>
		  <p class="max-w-[700px] text-lg text-muted-foreground">
			Accessible and customizable components that you can copy and paste into
			your apps. Free. Open Source.
		  </p>
		</div>
		<Carousel client:load images={images} />
	  </section>
</BaseLayout>